---

const {question} = Astro.props;

---

<details>
    <summary> {question} </summary>
    <slot/>
</details>
  
<style>
    
::selection {
    /* Change highlight background color to black */
    background: rgb(247, 226, 254);
    /* Change highlight text color to red */
    color: black;
}

summary{
    user-select: none;
    color:black;
    min-height:min-content;
}

details {
    border: 1px solid #aaa;
    border-radius: 4px;
    padding: 0.5em 0.5em 0;
    background-color:  rgb(247, 226, 254);
    padding:5px 10px;
    color:black;
    font-family: var(--primaryFont);
    font-size:1rem;
    margin: 10px 0;

}

</style>